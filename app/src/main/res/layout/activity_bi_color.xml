<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BiColorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/redFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_red"
            android:layout_weight="1"
            android:name="com.jsaavedra.practica1.FragmentRed"
            ></fragment>

        <fragment
            android:id="@+id/blueFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_blue"
            android:layout_weight="1"
            android:name="com.jsaavedra.practica1.FragmentBlue"
            ></fragment>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>